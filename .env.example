# ==================== Google Sheets ====================
GOOGLE_SHEET_NAME=幼儿园商机追踪
GOOGLE_SHEET_URL=https://docs.google.com/spreadsheets/d/YOUR_SHEET_ID
GOOGLE_CREDENTIALS_PATH=credentials.json

# ==================== PushPlus微信推送 ====================
# 在 http://www.pushplus.plus/ 获取
PUSHPLUS_TOKEN=your_pushplus_vip_token_here
PUSHPLUS_TOPIC=childcare_leads                    # 群组代码（可选）
PUSHPLUS_WEBHOOK=                                 # 回调地址（可选）

# ==================== 钉钉群机器人 ====================
# 钉钉群设置 → 智能群助手 → 添加机器人
DINGTALK_WEBHOOK=https://oapi.dingtalk.com/robot/send?access_token=xxx
DINGTALK_SECRET=SECxxxxxxxxxxxxxxxxxxxxxx

# ==================== Claude AI评分 ====================
# 在 https://console.anthropic.com/ 获取
ANTHROPIC_API_KEY=sk-ant-xxx
ANTHROPIC_MODEL=claude-sonnet-4-20250514          # 使用最新模型

# ==================== 通知策略配置 ====================
# 评分阈值
CRITICAL_THRESHOLD=90      # 紧急：≥90分立即推送+@所有人
HIGH_THRESHOLD=85          # 高优先级：85-89分批量推送
MEDIUM_THRESHOLD=70        # 中优先级：70-84分记录到摘要
LOW_THRESHOLD=0            # 低优先级：<70分仅记录

# 通知渠道开关
ENABLE_PUSHPLUS=true       # 是否启用PushPlus
ENABLE_DINGTALK=true       # 是否启用钉钉
ENABLE_INSTANT_ALERTS=true # 是否启用即时提醒（紧急+高优先级）
ENABLE_SOUND_ALERTS=true   # 是否启用声音提醒（PushPlus付费功能）
ENABLE_CLAUDE_AI=true      # 是否启用Claude AI评分（否则使用基础评分）

# 推送频率控制
BATCH_INTERVAL=300                # 批量推送间隔（秒，建议5分钟）
MAX_INSTANT_ALERTS_PER_HOUR=20    # 每小时最多即时提醒次数
DAILY_SUMMARY_TIME=09:00          # 每日摘要推送时间（北京时间）

# ==================== 数据源配置 ====================
# 启用的数据源（逗号分隔）
ENABLED_SOURCES=ontario,acecqa

# 数据源超时设置（秒）
FETCH_TIMEOUT=30
MAX_RETRIES=3

# ==================== 运行模式 ====================
DEBUG_MODE=false           # 调试模式（输出详细日志）
DRY_RUN=false             # 演习模式（不实际写入Sheets和推送通知）
LOG_LEVEL=INFO            # 日志级别（DEBUG/INFO/WARNING/ERROR）

# ==================== 其他配置 ====================
TIMEZONE=Asia/Shanghai     # 时区设置
MAX_RECORDS_PER_RUN=100   # 单次运行最大新增记录数
